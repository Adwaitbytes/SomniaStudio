"use client";
import { useState, useRef, useEffect } from "react";
import { createPaymentHeader } from "../utils/q402";

// --- TYPES ---
type Message = {
  role: string;
  content: string;
  type?: "code" | "text" | "report" | "deployed";
  rawCode?: string
};

type Log = {
  time: string;
  action: string;
  status: "Success" | "Failed" | "Pending";
};

type Mode = "architect" | "researcher";

export default function SomniStudio() {
  // --- STATE ---
  const [messages, setMessages] = useState<Message[]>([
    { role: "agent", content: "üü£ SomniStudio Online. Ready to architect the Metaverse." }
  ]);
  const [logs, setLogs] = useState<Log[]>([]);
  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);
  const [pendingCode, setPendingCode] = useState<string | null>(null);

  // SETTINGS
  const [userAddress, setUserAddress] = useState<string | null>(null);
  const [isMainnet, setIsMainnet] = useState(false);
  const [mode, setMode] = useState<Mode>("architect");
  
  // NEW: Template & Tutorial features
  const [showTemplates, setShowTemplates] = useState(false);
  const [showTutorials, setShowTutorials] = useState(false);
  const [templates, setTemplates] = useState<any[]>([]);
  const [analytics, setAnalytics] = useState<any>(null);

  const scrollRef = useRef<HTMLDivElement>(null);

  // Auto-scroll logic
  useEffect(() => {
    if (scrollRef.current) {
      scrollRef.current.scrollIntoView({ behavior: "smooth" });
    }
  }, [messages, loading]);
  
  // Load templates and analytics on mount
  useEffect(() => {
    loadTemplates();
    loadAnalytics();
  }, []);
  
  const loadTemplates = async () => {
    try {
      const res = await fetch("/api/templates");
      const data = await res.json();
      setTemplates(data.templates || []);
    } catch (err) {
      console.error("Failed to load templates:", err);
    }
  };
  
  const loadAnalytics = async () => {
    try {
      const res = await fetch("/api/analytics");
      const data = await res.json();
      setAnalytics(data);
    } catch (err) {
      console.error("Failed to load analytics:", err);
    }
  };
  
  const useTemplate = async (template: any) => {
    setShowTemplates(false);
    addLog(`Load Template: ${template.name}`, "Success");
    setMessages(prev => [...prev, { 
      role: "agent", 
      type: "code",
      content: `üìã Loaded template: ${template.name}\n${template.description}`,
      rawCode: template.code
    }]);
    setPendingCode(template.code);
  };

  // --- HELPERS ---
  const addLog = (action: string, status: "Success" | "Failed" | "Pending") => {
    const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
    setLogs(prev => [{ time, action, status }, ...prev]);
  };

  const getTxPreview = (code: string) => {
    // Improved Regex to catch diverse declaration styles
    const nameMatch = code.match(/name\s*=\s*"(.*?)"/) || code.match(/constructor\s*\(\)\s*ERC20\s*\(\s*"(.*?)"/);
    const symbolMatch = code.match(/symbol\s*=\s*"(.*?)"/) || code.match(/ERC20\s*\(\s*".*?"\s*,\s*"(.*?)"/);

    return {
      name: nameMatch ? nameMatch[1] : "SomniaContract",
      symbol: symbolMatch ? symbolMatch[1] : "SOM"
    };
  };

  // --- WALLET ---
  const connectWallet = async () => {
    if (typeof window !== "undefined" && (window as any).ethereum) {
      try {
        const accounts = await (window as any).ethereum.request({ method: "eth_requestAccounts" });
        setUserAddress(accounts[0]);
        addLog("Wallet Connect", "Success");
        setMessages(prev => [...prev, { role: "agent", content: `‚úÖ Authenticated: ${accounts[0].slice(0, 6)}...${accounts[0].slice(-4)}` }]);
      } catch (err) {
        addLog("Wallet Connect", "Failed");
      }
    } else {
      alert("Please install Metamask.");
    }
  };

  // --- API CALLER ---
  const callAgent = async (action: string, payload: any) => {
    if (!userAddress) {
      setMessages(prev => [...prev, { role: "agent", content: "‚ö†Ô∏è Please connect wallet first." }]);
      return { success: false, error: "No wallet" };
    }

    setLoading(true);
    try {
      let res = await fetch("/api/agent", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          action,
          userAddress,
          network: isMainnet ? "mainnet" : "testnet",
          ...payload
        }),
      });

      if (res.status === 402) {
        const data = await res.json();
        const details = data.paymentDetails;

        addLog("Payment Required", "Pending");
        setMessages(prev => [...prev, { role: "agent", content: `üí≥ Signature Required for ${action.toUpperCase()}...` }]);

        const xPaymentHeader = await createPaymentHeader(userAddress, details);
        addLog("Signature Verified", "Success");

        res = await fetch("/api/agent", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-PAYMENT": xPaymentHeader
          },
          body: JSON.stringify({
            action,
            userAddress,
            network: isMainnet ? "mainnet" : "testnet",
            ...payload
          }),
        });
      }

      if (!res.ok) {
        const errData = await res.json();
        throw new Error(errData.error || "Request Failed");
      }

      const finalData = await res.json();
      setLoading(false);
      return finalData;

    } catch (e: any) {
      setLoading(false);
      if (e.code === 4001) {
        setMessages(prev => [...prev, { role: "agent", content: "‚ùå You rejected the request." }]);
      } else {
        setMessages(prev => [...prev, { role: "agent", content: `‚ùå Error: ${e.message}` }]);
      }
      return { success: false, error: e.message };
    }
  };

  // --- HANDLERS ---
  const handleSend = async () => {
    if (!input.trim()) return;
    const prompt = input;
    setMessages(prev => [...prev, { role: "user", content: prompt }]);
    setInput("");

    if (mode === "researcher") {
      addLog("Research Query", "Pending");
      const data = await callAgent("research", { prompt });
      if (data.success) {
        addLog("Research Query", "Success");
        setMessages(prev => [...prev, { role: "agent", content: data.result }]);
      } else {
        addLog("Research Query", "Failed");
        setMessages(prev => [...prev, { role: "agent", content: "‚ùå Research Failed." }]);
      }
      return;
    }

    addLog("Generate Contract", "Pending");
    const data = await callAgent("generate", { prompt });

    if (data.success) {
      addLog("Generate Contract", "Success");
      setPendingCode(data.code);
      setMessages(prev => [...prev, {
        role: "agent",
        type: "code",
        content: "I've drafted the contract based on your requirements.",
        rawCode: data.code
      }]);
    } else {
      addLog("Generate Contract", "Failed");
      setMessages(prev => [...prev, { role: "agent", content: `‚ùå Error: ${data.error}` }]);
    }
  };

  const handleAudit = async (codeToAudit?: string) => {
    const code = codeToAudit || pendingCode;
    if (!code) return;

    setMessages(prev => [...prev, { role: "user", content: "üõ°Ô∏è Audit code." }]);
    addLog("Security Audit", "Pending");

    const data = await callAgent("audit", { code });

    if (data.success) {
      addLog("Security Audit", "Success");
      setMessages(prev => [...prev, { role: "agent", type: "report", content: data.report }]);
    } else {
      addLog("Security Audit", "Failed");
      setMessages(prev => [...prev, { role: "agent", content: "‚ùå Audit Failed." }]);
    }
  };

  const handleDeploy = async (codeToDeploy?: string) => {
    const code = codeToDeploy || pendingCode;
    if (!code) return;

    const netName = isMainnet ? "MAINNET" : "TESTNET";
    setMessages(prev => [...prev, { role: "user", content: `üöÄ Deploy to ${netName}` }]);

    setMessages(prev => [...prev, { role: "agent", content: "Verifying Policy..." }]);
    addLog("Policy Check", "Success");
    addLog(`Deploy (${netName})`, "Pending");

    const data = await callAgent("deploy", { code });

    if (data.success) {
      addLog(`Deploy (${netName})`, "Success");
      setMessages(prev => [...prev, {
        role: "agent",
        type: "deployed",
        content: `‚úÖ CONTRACT DEPLOYED.\n\nüìç Address: ${data.address}\n\nüîó Somnia Explorer: https://${isMainnet ? "explorer" : "shannon-explorer"}.somnia.network/address/${data.address}`,
        rawCode: data.address
      }]);
      setPendingCode(null);
    } else {
      addLog(`Deploy (${netName})`, "Failed");
      setMessages(prev => [...prev, { role: "agent", content: `‚ùå Deployment Failed: ${data.error}` }]);
    }
  };

  const handleFund = async (address: string) => {
    const amount = "0.001";
    setMessages(prev => [...prev, { role: "user", content: `üí∏ Fund contract` }]);
    addLog("Fund Contract", "Pending");

    const data = await callAgent("transfer", { toAddress: address, amount });

    if (data.success) {
      addLog("Fund Contract", "Success");
      setMessages(prev => [...prev, { role: "agent", content: `‚úÖ FUNDING COMPLETE.\n\nSent: ${amount} STT\nTo: ${address}\nüîó Hash: ${data.txHash}` }]);
    } else {
      addLog("Fund Contract", "Failed");
      setMessages(prev => [...prev, { role: "agent", content: `‚ùå Transfer Failed: ${data.error}` }]);
    }
  };

  return (
    <div className="min-h-screen bg-[#080808] text-white font-sans overflow-hidden selection:bg-purple-500 selection:text-white">

      {/* BACKGROUND: DOT GRID */}
      <div className="fixed inset-0 pointer-events-none z-0"
        style={{ backgroundImage: 'radial-gradient(rgba(255,255,255,0.1) 1px, transparent 1px)', backgroundSize: '24px 24px' }}>
      </div>

      {/* ACCENT GLOWS */}
      <div className="fixed top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-purple-600/20 blur-[120px] rounded-full pointer-events-none z-0"></div>

      {/* --- CONTENT WRAPPER --- */}
      <div className="relative z-10 flex h-screen p-6 gap-6 max-w-[1600px] mx-auto">

        {/* --- LEFT: MAIN INTERFACE --- */}
        <div className="flex-1 flex flex-col bg-[#111] border border-white/5 rounded-3xl shadow-2xl overflow-hidden backdrop-blur-sm">

          {/* HEADER */}
          <div className="h-20 border-b border-white/5 flex items-center justify-between px-8 bg-black/20">
            <div className="flex items-center gap-4">
              <div className="w-10 h-10 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center font-bold text-xl shadow-lg">S</div>
              <div>
                <h1 className="font-bold text-lg tracking-wide">SomniStudio</h1>
                <p className="text-[10px] text-gray-500 uppercase tracking-widest font-medium">Somnia Network Architect</p>
              </div>
            </div>

            <div className="flex bg-[#1a1a1a] p-1 rounded-xl">
              <button
                onClick={() => setMode("architect")}
                className={`px-6 py-2 rounded-lg text-xs font-bold transition-all ${mode === "architect" ? "bg-purple-600 text-white shadow-lg" : "text-gray-400 hover:text-white"}`}
              >
                Architect
              </button>
              <button
                onClick={() => setMode("researcher")}
                className={`px-6 py-2 rounded-lg text-xs font-bold transition-all ${mode === "researcher" ? "bg-pink-600 text-white shadow-lg" : "text-gray-400 hover:text-white"}`}
              >
                Researcher
              </button>
            </div>

            <div className="flex items-center gap-3">
              <button
                onClick={() => setShowTemplates(!showTemplates)}
                className="h-9 px-4 bg-indigo-600/20 border border-indigo-500/30 text-indigo-300 rounded-full text-xs font-bold hover:bg-indigo-600/30 transition-all"
              >
                üìã Templates
              </button>
              <button
                onClick={() => setShowTutorials(!showTutorials)}
                className="h-9 px-4 bg-cyan-600/20 border border-cyan-500/30 text-cyan-300 rounded-full text-xs font-bold hover:bg-cyan-600/30 transition-all"
              >
                üìö Tutorials
              </button>
              <button
                onClick={() => setIsMainnet(!isMainnet)}
                className={`h-8 px-4 rounded-full text-[10px] font-bold border transition-all ${isMainnet ? "border-red-500/50 text-red-400 bg-red-500/10" : "border-emerald-500/50 text-emerald-400 bg-emerald-500/10"}`}
              >
                {isMainnet ? "MAINNET" : "TESTNET"}
              </button>
              {!userAddress ? (
                <button onClick={connectWallet} className="h-9 px-6 bg-white text-black rounded-full text-xs font-bold hover:bg-gray-200 transition-colors">
                  Connect Wallet
                </button>
              ) : (
                <div className="h-9 px-4 bg-white/5 border border-white/10 rounded-full flex items-center justify-center gap-2">
                  <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                  <span className="text-xs font-mono font-bold text-gray-300">{userAddress.slice(0, 6)}...</span>
                </div>
              )}
            </div>
          </div>

          {/* TEMPLATES PANEL */}
          {showTemplates && (
            <div className="absolute inset-6 bg-black/95 backdrop-blur-xl z-50 rounded-3xl border border-white/10 p-8 overflow-y-auto">
              <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-bold">üìã Template Library</h2>
                <button onClick={() => setShowTemplates(false)} className="text-gray-400 hover:text-white text-2xl">&times;</button>
              </div>
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                {templates.map((template, idx) => (
                  <div key={idx} className="bg-[#1a1a1a] border border-white/10 rounded-xl p-6 hover:border-purple-500/50 transition-all cursor-pointer group" onClick={() => useTemplate(template)}>
                    <div className="flex items-start justify-between mb-3">
                      <h3 className="font-bold text-lg group-hover:text-purple-400 transition-colors">{template.name}</h3>
                      <span className="px-2 py-1 bg-purple-500/20 text-purple-300 text-xs rounded-full">{template.category}</span>
                    </div>
                    <p className="text-sm text-gray-400 mb-4">{template.description}</p>
                    <div className="flex gap-2 flex-wrap">
                      {template.features?.map((feature: string, i: number) => (
                        <span key={i} className="text-xs bg-white/5 px-2 py-1 rounded">{feature}</span>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* TUTORIALS PANEL */}
          {showTutorials && (
            <div className="absolute inset-6 bg-black/95 backdrop-blur-xl z-50 rounded-3xl border border-white/10 p-8 overflow-y-auto">
              <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-bold">üìö Learning Hub</h2>
                <button onClick={() => setShowTutorials(false)} className="text-gray-400 hover:text-white text-2xl">&times;</button>
              </div>
              <div className="space-y-4">
                <div className="bg-[#1a1a1a] border border-white/10 rounded-xl p-6 hover:border-cyan-500/50 transition-all">
                  <h3 className="font-bold text-lg mb-2">ü™ô ERC-20 Token Guide</h3>
                  <p className="text-sm text-gray-400 mb-4">Learn how to create and deploy fungible tokens on Somnia Network.</p>
                  <a href="/tutorials/erc20-token" target="_blank" className="text-cyan-400 text-sm font-bold hover:underline">Read Tutorial ‚Üí</a>
                </div>
                <div className="bg-[#1a1a1a] border border-white/10 rounded-xl p-6 hover:border-cyan-500/50 transition-all">
                  <h3 className="font-bold text-lg mb-2">üéÆ Gaming NFT Development</h3>
                  <p className="text-sm text-gray-400 mb-4">Build NFTs with rarity systems, batch minting, and Unity/Unreal integration.</p>
                  <a href="/tutorials/gaming-nft" target="_blank" className="text-cyan-400 text-sm font-bold hover:underline">Read Tutorial ‚Üí</a>
                </div>
                <div className="bg-[#1a1a1a] border border-white/10 rounded-xl p-6">
                  <h3 className="font-bold text-lg mb-2">üìä Network Statistics</h3>
                  {analytics && (
                    <div className="grid grid-cols-2 gap-4 mt-4">
                      <div>
                        <p className="text-xs text-gray-500 uppercase">Total Deployments</p>
                        <p className="text-2xl font-bold text-purple-400">{analytics.totalDeployments || 0}</p>
                      </div>
                      <div>
                        <p className="text-xs text-gray-500 uppercase">Unique Users</p>
                        <p className="text-2xl font-bold text-cyan-400">{analytics.uniqueUsers || 0}</p>
                      </div>
                      <div>
                        <p className="text-xs text-gray-500 uppercase">Most Popular</p>
                        <p className="text-sm font-bold text-emerald-400">{analytics.mostUsedTemplate || "N/A"}</p>
                      </div>
                      <div>
                        <p className="text-xs text-gray-500 uppercase">24h Activity</p>
                        <p className="text-2xl font-bold text-yellow-400">{analytics.last24Hours || 0}</p>
                      </div>
                    </div>
                  )}
                </div>
              </div>
            </div>
          )}

          {/* CHAT AREA */}
          <div className="flex-1 overflow-y-auto p-8 space-y-8 scrollbar-thin scrollbar-thumb-white/10 scrollbar-track-transparent">
            {messages.map((m, i) => (
              <div key={i} className={`flex flex-col ${m.role === "user" ? "items-end" : "items-start"} animate-fade-in-up`}>

                {/* Text Bubble */}
                <div className={`max-w-[80%] px-6 py-4 rounded-2xl whitespace-pre-wrap leading-relaxed text-sm ${m.role === "user"
                  ? "bg-purple-600 text-white rounded-br-sm shadow-purple-900/20 shadow-lg"
                  : "bg-[#1a1a1a] text-gray-300 border border-white/5 rounded-bl-sm"
                  }`}>
                  {m.content}
                </div>

                {/* CODE PREVIEW CARD */}
                {m.type === "code" && m.rawCode && (
                  <div className="mt-4 w-[600px] bg-[#0c0c0c] border border-white/10 rounded-xl overflow-hidden shadow-2xl">
                    <div className="h-8 bg-[#151515] border-b border-white/5 flex items-center px-4 justify-between">
                      <div className="flex gap-1.5">
                        <div className="w-2.5 h-2.5 rounded-full bg-red-500/20"></div>
                        <div className="w-2.5 h-2.5 rounded-full bg-yellow-500/20"></div>
                        <div className="w-2.5 h-2.5 rounded-full bg-green-500/20"></div>
                      </div>
                      <span className="text-[10px] font-mono text-gray-600">Contract Preview</span>
                    </div>

                    <div className="p-5 grid grid-cols-2 gap-6 border-b border-white/5 bg-[#0f0f0f]">
                      <div>
                        <p className="text-[10px] text-gray-600 font-bold uppercase tracking-wider mb-1">TYPE</p>
                        <p className="text-sm font-bold text-white">Smart Contract</p>
                      </div>
                      <div>
                        <p className="text-[10px] text-gray-600 font-bold uppercase tracking-wider mb-1">COST</p>
                        <p className="text-sm font-bold text-emerald-400">Free (Sponsored)</p>
                      </div>
                      <div>
                        <p className="text-[10px] text-gray-600 font-bold uppercase tracking-wider mb-1">NAME</p>
                        <p className="text-sm text-gray-300">{getTxPreview(m.rawCode).name}</p>
                      </div>
                      <div>
                        <p className="text-[10px] text-gray-600 font-bold uppercase tracking-wider mb-1">SYMBOL</p>
                        <p className="text-sm text-gray-300">{getTxPreview(m.rawCode).symbol}</p>
                      </div>
                    </div>

                    <div className="p-4 bg-black/50 max-h-60 overflow-y-auto overflow-x-auto scrollbar-thin scrollbar-thumb-white/10 scrollbar-track-transparent">
                      <pre className="text-[10px] font-mono text-gray-300 pointer-events-auto select-text whitespace-pre">{m.rawCode}</pre>
                    </div>

                    <div className="p-4 bg-[#111] flex gap-3">
                      <button
                        onClick={() => handleAudit(m.rawCode)}
                        className="flex-1 py-3 rounded-lg border border-white/10 text-xs font-bold text-gray-400 hover:bg-white/5 hover:text-white transition-all"
                      >
                        Run Security Audit
                      </button>
                      <button
                        onClick={() => handleDeploy(m.rawCode)}
                        className="flex-1 py-3 rounded-lg bg-white text-black text-xs font-bold hover:bg-gray-200 transition-all shadow-lg"
                      >
                        Deploy to Somnia
                      </button>
                    </div>
                  </div>
                )}

                {/* REPORT CARD */}
                {m.type === "report" && (
                  <div className="mt-4 w-[600px] border border-yellow-500/20 bg-yellow-900/5 rounded-xl p-6">
                    <h4 className="text-yellow-500 font-bold text-sm mb-2 flex items-center gap-2">üöß Audit Findings</h4>
                    <p className="text-xs text-gray-400 font-mono whitespace-pre-wrap">{m.content}</p>
                  </div>
                )}

                {/* DEPLOYED CARD */}
                {m.type === "deployed" && (
                  <div className="mt-4 w-[500px] bg-gradient-to-br from-emerald-900/20 to-emerald-900/5 border border-emerald-500/30 rounded-xl p-6 relative overflow-hidden">
                    <div className="absolute top-0 left-0 w-1 h-full bg-emerald-500"></div>
                    <h3 className="font-bold text-emerald-400 mb-1">Deployment Successful</h3>
                    <p className="text-xs text-emerald-200/60 mb-6">Contract is live on Somnia Network.</p>
                    <div className="flex gap-3">
                      <button onClick={() => handleFund(m.rawCode!)} className="px-6 py-2 bg-emerald-500 hover:bg-emerald-400 text-black text-xs font-bold rounded-lg transition-all">
                        Fund Contract
                      </button>
                      <a href={m.content.match(/https:\/\/[^\s]+/)?.[0]} target="_blank" rel="noreferrer" className="px-6 py-2 bg-white/5 hover:bg-white/10 text-white text-xs font-bold rounded-lg border border-white/5 transition-all">
                        View on Explorer
                      </a>
                    </div>
                  </div>
                )}

              </div>
            ))}
            {loading && (
              <div className="flex gap-2 text-xs text-gray-500 items-center animate-pulse pl-2">
                <div className="w-1.5 h-1.5 bg-purple-500 rounded-full"></div>
                Processing...
              </div>
            )}
            <div ref={scrollRef}></div>
          </div>

          {/* INPUT AREA */}
          <div className="p-6 bg-[#151515] border-t border-white/5 relative z-20">
            <div className="relative">
              <input
                value={input}
                onChange={(e) => setInput(e.target.value)}
                onKeyDown={(e) => e.key === "Enter" && handleSend()}
                disabled={loading || !userAddress}
                placeholder={mode === "architect" ? "Describe your smart contract..." : "Ask a research question..."}
                className="w-full bg-[#0a0a0a] border border-white/10 rounded-xl h-14 pl-5 pr-32 text-sm text-white placeholder-gray-600 focus:outline-none focus:border-purple-500/50 transition-all"
              />
              <button
                onClick={handleSend}
                disabled={loading || !userAddress}
                className={`absolute right-2 top-2 h-10 px-6 rounded-lg text-xs font-bold transition-all ${loading || !userAddress ? "bg-white/5 text-gray-600" : "bg-purple-600 text-white hover:bg-purple-500"}`}
              >
                SEND
              </button>
            </div>
            <div className="flex justify-center mt-4 opacity-40 hover:opacity-100 transition-opacity duration-500">
              <span className="text-[10px] font-bold tracking-[0.2em] uppercase text-gray-500 flex items-center gap-2">
                <span className="w-1.5 h-1.5 bg-purple-500 rounded-full"></span>
                Powered by Somnia
              </span>
            </div>
          </div>
        </div>

        {/* --- RIGHT: ACTIVITY LOGS --- */}
        <div className="w-80 flex flex-col bg-[#111] border border-white/5 rounded-3xl p-6 hidden xl:flex">
          <h3 className="text-xs font-bold text-gray-500 uppercase tracking-widest mb-6">Activity Stream</h3>
          <div className="space-y-6 overflow-y-auto flex-1 pr-2 scrollbar-thin">
            {logs.length === 0 && <p className="text-xs text-gray-600 italic">No activity yet.</p>}
            {logs.map((log, i) => (
              <div key={i} className="flex gap-4 relative">
                <div className={`mt-0.5 w-2 h-2 rounded-full flex-shrink-0 ${log.status === "Success" ? "bg-emerald-500" : log.status === "Failed" ? "bg-red-500" : "bg-yellow-500"}`}></div>
                {i !== logs.length - 1 && <div className="absolute left-[3px] top-3 bottom-[-20px] w-px bg-white/5"></div>}
                <div>
                  <p className={`text-xs font-bold ${log.status === "Success" ? "text-emerald-400" : log.status === "Failed" ? "text-red-400" : "text-yellow-400"}`}>{log.status}</p>
                  <p className="text-xs text-gray-400 mt-1">{log.action}</p>
                  <p className="text-[10px] text-gray-600 font-mono mt-1">{log.time}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
  );
}